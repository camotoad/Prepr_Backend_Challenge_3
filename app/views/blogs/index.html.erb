<p><%= notice %></p>


<% @blogs.each do |blog| %>
<div class="card">
  <div class="card-body">
    <h3 class="card-title border-bottom"><%= blog.title %></h3>
    <p class="card-text"><%= blog.body %></p>
    <div class="col text-center">
    <%= link_to 'View post details', blog, class:"btn btn-primary" %>
    </div>
  </div>
</div>
<br>
<% end %>
